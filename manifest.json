{
  "name": "DocGraph Spade",
  "icons": {
      "16": "images/icon_16.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
  },
  "description": "Clinical Bookmark Data Miner",
  "version": "1.0",
  "permissions": [
    "tabs",
 	"<all_urls>",
 	"idle",
 	"history"
  ],
  "manifest_version": 2,
  "browser_action": {
    "default_icon": {
      "19": "images/icon_19.png",
      "38": "images/icon_38.png"
     },
    "default_title": "DocGraph Spade",
    "default_popup": "popup.html"       
  },
  "background": {
    "scripts": [
      "background.js"
  	],
    "persistent": true
  },
  "options_page": "options.html", 
  "web_accessible_resources": [
    "images/*"
  ]

 }

